@{
    ViewData["Title"] = "Iconic Nails | Nail Bar & Beauty";
    Layout = "_Layout";
}

@section Styles {
  <style>
    :root {
      --bg: #0b0b0c;
      --bg-soft: #141417;
      --card: #19191e;
      --text: #f7f7f8;
      --muted: #bdbdc7;
      --brand: #f0a3bb; /* rose */
      --brand-2: #c08ea8; /* mauve */
      --accent: #f8dfe9; /* light rose */
      --gold: #d4af37; /* subtle gold for accents */
      --radius: 16px;
      --shadow: 0 10px 25px rgba(0,0,0,0.35);
      --shadow-soft: 0 8px 20px rgba(0,0,0,0.25);
    }

    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji";
      color: var(--text);
      background: radial-gradient(1200px 800px at 80% -10%, rgba(240,163,187,0.15), transparent),
                  radial-gradient(900px 600px at -10% 20%, rgba(192,142,168,0.12), transparent),
                  var(--bg);
      line-height: 1.6;
    }

    .container { width: min(1200px, 92%); margin: 0 auto; }

    /* Hero */
    .hero { padding: 72px 0 56px; }
    .hero-inner { display: grid; grid-template-columns: 1.1fr 0.9fr; gap: 40px; align-items: center; }
    .kicker { color: var(--brand); font-weight: 700; letter-spacing: .18em; font-size: 12px; text-transform: uppercase; }
    h1 { font-size: clamp(32px, 6vw, 56px); line-height: 1.1; margin: 10px 0 12px; }
    .lead { color: var(--muted); font-size: clamp(16px, 2vw, 18px); max-width: 55ch; }
    .actions { display: flex; gap: 12px; margin-top: 24px; flex-wrap: wrap; }
    .btn { --b: var(--brand); display: inline-flex; align-items: center; gap: 10px; padding: 12px 18px; border-radius: 12px; background: var(--b); color: #101012; text-decoration: none; font-weight: 700; box-shadow: var(--shadow); border: 1px solid rgba(0,0,0,0.08); }
    .btn:hover { filter: brightness(1.05); transform: translateY(-1px); transition: .2s ease; }
    .btn.secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.12); }

    .hero-card { background: linear-gradient(180deg, rgba(255,255,255,0.06), rgba(255,255,255,0.03)); border: 1px solid rgba(255,255,255,0.08); border-radius: 22px; padding: 18px; box-shadow: var(--shadow); }
    .hero-img { aspect-ratio: 4/3; width: 100%; border-radius: 14px; background: linear-gradient(135deg, #222, #111); display: grid; place-items: center; overflow: hidden; position: relative; }
    .chip { position: absolute; bottom: 10px; right: 10px; background: rgba(255,255,255,0.08); padding: 6px 10px; border-radius: 999px; font-size: 12px; border: 1px solid rgba(255,255,255,0.12); }

    /* Sections */
    section { padding: 64px 0; }
    .section-title { font-size: clamp(26px, 3.6vw, 36px); margin-bottom: 10px; }
    .section-desc { color: var(--muted); margin-bottom: 28px; }

    /* Services */
    .cards { display: grid; grid-template-columns: repeat(12, 1fr); gap: 18px; }
    .card { grid-column: span 12; background: var(--card); border: 1px solid rgba(255,255,255,0.08); border-radius: var(--radius); padding: 20px; box-shadow: var(--shadow-soft); }
    .card h3 { margin: 0 0 6px; font-size: 20px; }
    .price { color: var(--accent); font-weight: 700; }
    .muted { color: var(--muted); }
    .pill { display: inline-block; padding: 6px 10px; border-radius: 999px; border: 1px solid rgba(255,255,255,0.12); color: var(--muted); font-size: 12px; }

    /* Price list */
    .price-list { display: grid; gap: 10px; }
    .row { display: grid; grid-template-columns: 1fr auto; align-items: baseline; padding: 10px 14px; border-radius: 12px; background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.06); }
    .row span:last-child { color: var(--accent); font-weight: 700; }

    /* Gallery */
    .gallery { display: grid; grid-template-columns: repeat(12, 1fr); gap: 10px; }
    .g { grid-column: span 6; aspect-ratio: 1/1; background: linear-gradient(135deg, #222, #121212); border-radius: 14px; border: 1px solid rgba(255,255,255,0.06); position: relative; overflow: hidden; }
    .g::after { content: ""; position: absolute; inset: 0; background: radial-gradient(60% 40% at 60% 35%, rgba(240,163,187,0.12), transparent); }

    /* Booking */
    .booking { display: grid; grid-template-columns: 1fr 1fr; gap: 18px; }
    form { background: var(--card); padding: 18px; border: 1px solid rgba(255,255,255,0.08); border-radius: var(--radius); }
    label { display: block; font-size: 14px; margin-bottom: 6px; color: var(--muted); }
    input, select, textarea { width: 100%; padding: 12px 12px; border-radius: 12px; border: 1px solid rgba(255,255,255,0.12); background: #0f0f12; color: var(--text); outline: none; }
    textarea { min-height: 110px; resize: vertical; }

    .info-card { background: linear-gradient(180deg, rgba(255,255,255,0.06), rgba(255,255,255,0.03)); border: 1px solid rgba(255,255,255,0.08); border-radius: var(--radius); padding: 18px; }
    .hours { display: grid; grid-template-columns: 1fr auto; gap: 6px 10px; }

    /* Footer */
    .foot { display: grid; grid-template-columns: 1fr auto; align-items: center; gap: 14px; }
    .social a { display: inline-flex; align-items: center; justify-content: center; width: 40px; height: 40px; border-radius: 999px; background: #141416; border: 1px solid rgba(255,255,255,0.08); margin-left: 8px; }

    /* Razor note: use @@media so Razor renders literal “@@media” */
    @@media (max-width: 980px) {
      .hero-inner { grid-template-columns: 1fr; }
      .booking { grid-template-columns: 1fr; }
    }
    @@media (min-width: 700px) {
      .card { grid-column: span 6; }
      .g { grid-column: span 4; }
    }
    @@media (min-width: 1000px) {
      .card { grid-column: span 4; }
      .g { grid-column: span 3; }
    }
  </style>
}

<main id="home" class="hero">
  <div class="container hero-inner">
    <div>
      <div class="kicker">Nail Bar & Beauty</div>
      <h1>Luxury nails, iconic style.</h1>
      <p class="lead">From flawless gel overlays to hand-painted art, our technicians craft durable, photo-ready nails that feel as good as they look. Pamper packages and bridal sets available.</p>
      <div class="actions">
        <a class="btn" href="#booking" aria-label="Book an appointment">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M8 2v3m8-3v3M3 9h18M5 12h14M5 16h10" stroke="#101012" stroke-width="2" stroke-linecap="round"/></svg>
          Book now
        </a>
        <a class="btn secondary" href="#services">Explore services</a>
      </div>
    </div>
    <div class="hero-card" aria-hidden="true">
      <div class="hero-img">
        <svg viewBox="0 0 400 300" width="100%" height="100%" preserveAspectRatio="xMidYMid slice">
          <defs>
            <linearGradient id="grad" x1="0" y1="0" x2="1" y2="1">
              <stop offset="0%" stop-color="#f0a3bb" stop-opacity="0.9" />
              <stop offset="100%" stop-color="#9e7091" stop-opacity="0.9" />
            </linearGradient>
          </defs>
          <g opacity="0.35">
            <circle cx="120" cy="100" r="120" fill="url(#grad)"/>
            <circle cx="260" cy="180" r="100" fill="url(#grad)"/>
            <circle cx="340" cy="80" r="70" fill="url(#grad)"/>
          </g>
        </svg>
        <div class="chip">New: BIAB Builder Gel</div>
      </div>
    </div>
  </div>
</main>

<section id="services">
  <div class="container">
    <h2 class="section-title">Signature services</h2>
    <p class="section-desc">Carefully curated treatments using premium, cruelty-free products to protect nail health and elevate style.</p>

    <div class="cards">
      <article class="card">
        <div class="pill">45–60 min</div>
        <h3>Gel Manicure</h3>
        <p class="muted">Cuticle care, shaping, gel polish with high-gloss finish. Optional French tip.</p>
        <p class="price">R 350</p>
      </article>
      <article class="card">
        <div class="pill">60–90 min</div>
        <h3>Acrylic Set</h3>
        <p class="muted">Custom length & shape with long-wear acrylic and protective top coat.</p>
        <p class="price">R 520</p>
      </article>
      <article class="card">
        <div class="pill">30–45 min</div>
        <h3>Express Pedi</h3>
        <p class="muted">Quick refresh: soak, file, buff + polish. Perfect for maintenance.</p>
        <p class="price">R 280</p>
      </article>
      <article class="card">
        <div class="pill">+15–30 min</div>
        <h3>Nail Art (Add-on)</h3>
        <p class="muted">Minimal to intricate designs: chrome, foils, decals, hand-painted art.</p>
        <p class="price">from R 20 / nail</p>
      </article>
      <article class="card">
        <div class="pill">75–90 min</div>
        <h3>BIAB Builder Gel</h3>
        <p class="muted">Reinforced overlay for strength & growth, natural look with durability.</p>
        <p class="price">R 480</p>
      </article>
      <article class="card">
        <div class="pill">60 min</div>
        <h3>Gel Pedicure</h3>
        <p class="muted">Spa soak, exfoliation, cuticle work, shaping & gel polish.</p>
        <p class="price">R 420</p>
      </article>
    </div>
  </div>
</section>

<section id="pricing">
  <div class="container">
    <h2 class="section-title">Full price list</h2>
    <p class="section-desc">Clear, upfront pricing. Packages available on request.</p>

    <div class="price-list">
      <div class="row"><span>Soak-off (gel)</span><span>R 120</span></div>
      <div class="row"><span>Soak-off (acrylic)</span><span>R 160</span></div>
      <div class="row"><span>Gel overlay (hands)</span><span>R 380</span></div>
      <div class="row"><span>Gel overlay (toes)</span><span>R 320</span></div>
      <div class="row"><span>Acrylic fill (2–3 weeks)</span><span>R 360</span></div>
      <div class="row"><span>Repairs</span><span>R 40 / nail</span></div>
      <div class="row"><span>French add-on</span><span>R 60</span></div>
      <div class="row"><span>Chrome / Cat-eye add-on</span><span>R 80</span></div>
    </div>
  </div>
</section>

<section id="gallery">
  <div class="container">
    <h2 class="section-title">Gallery</h2>
    <p class="section-desc">A glimpse of recent sets. Swap these placeholders with your photos.</p>
    <div class="gallery" aria-label="Photo gallery (placeholders)">
      <div class="g"></div><div class="g"></div><div class="g"></div><div class="g"></div>
      <div class="g"></div><div class="g"></div><div class="g"></div><div class="g"></div>
    </div>
  </div>
</section>

<section id="booking">
  <div class="container">
    <h2 class="section-title">Book an appointment</h2>
    <p class="section-desc">Choose a service and time that suits you. We’ll confirm via WhatsApp or email.</p>

    <div class="booking">
      <form onsubmit="event.preventDefault(); window.location.href='https://wa.me/0000000000?text=' + encodeURIComponent('Hi Iconic Nails! I would like to book: ' + document.getElementById('service').value + ' on ' + document.getElementById('date').value + ' at ' + document.getElementById('time').value + '.');">
        <div>
          <label for="name">Your name</label>
          <input id="name" name="name" required />
        </div>
        <div style="margin-top:12px">
          <label for="service">Service</label>
          <select id="service" name="service" required>
            <option value="">Select a service…</option>
            <option>Gel Manicure</option>
            <option>Acrylic Set</option>
            <option>Express Pedi</option>
            <option>BIAB Builder Gel</option>
            <option>Gel Pedicure</option>
            <option>Other / Custom</option>
          </select>
        </div>
        <div style="display:grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-top:12px">
          <div>
            <label for="date">Preferred date</label>
            <input id="date" type="date" required />
          </div>
          <div>
            <label for="time">Preferred time</label>
            <input id="time" type="time" required />
          </div>
        </div>
        <div style="margin-top:12px">
          <label for="notes">Notes (optional)</label>
          <textarea id="notes" placeholder="Design inspo, length/shape, allergies…"></textarea>
        </div>
        <div style="margin-top:16px; display:flex; gap:10px; flex-wrap:wrap;">
          <button class="btn" type="submit">Request via WhatsApp</button>
          <a class="btn secondary" href="mailto:bookings@iconicnails.co.za?subject=Booking%20request" aria-label="Request via email">Email us</a>
        </div>
      </form>

      <aside class="info-card">
        <h3 style="margin-top:0">Visit us</h3>
        <p class="muted">123 Iconic Avenue, Central, Johannesburg</p>
        <div class="hours" style="margin-top:10px">
          <div>Mon–Fri</div><div>09:00 – 18:00</div>
          <div>Saturday</div><div>09:00 – 16:00</div>
          <div>Sunday</div><div>Closed</div>
        </div>
        <div style="margin-top:14px; display:flex; gap:10px; flex-wrap:wrap;">
          <a class="btn secondary" href="tel:+27XXXXXXXXX">Call: +27 XX XXX XXXX</a>
          <a class="btn secondary" href="https://maps.google.com/?q=Iconic%20Nails%20Johannesburg" target="_blank" rel="noopener">Open in Maps</a>
        </div>
        <div style="margin-top:14px; border-radius:12px; overflow:hidden; border:1px solid rgba(255,255,255,0.08)">
          <iframe title="Map" src="https://maps.google.com/maps?q=johannesburg&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="220" style="border:0"></iframe>
        </div>
      </aside>
    </div>
  </div>
</section>

<section id="contact">
  <div class="container">
    <h2 class="section-title">We’re social</h2>
    <p class="section-desc">Follow for new sets, promos and behind-the-scenes.</p>
    <div class="actions">
      <a class="btn secondary" href="#">Instagram</a>
