@model Pos.Models.Auth.LoginVm
@{
    ViewData["Title"] = "Sign in";
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-6 col-lg-4">
        <h2 class="mb-3">Sign in</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control text-white bg-dark" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control text-white bg-dark" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input bg-dark" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />

            <button type="submit" class="btn btn-primary w-100">Sign in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
