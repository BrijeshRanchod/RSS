@model IEnumerable<Pos.Models.SalesPerson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button class="btn btn-primary"><a asp-action="Create" class="btn btn-primary text-white text-decoration-none">Create New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                    <button class="btn btn-primary">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-white text-decoration-none">Edit</a>
                    </button>
                <button class="btn btn-info">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white text-decoration-none">Details</a>
                </button>
                <button class="btn btn-danger">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white text-decoration-none">Delete</a>
                </button>
            </td>

        </tr>
}
    </tbody>
</table>
